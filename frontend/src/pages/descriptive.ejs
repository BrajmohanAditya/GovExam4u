<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Descriptive</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/public/descriptive.js" defer></script>
  </head>
  <body class="bg-gray-100 font-sans m-0">
    <!-- Navbar -->
    <nav class="flex flex-col md:flex-row justify-between items-center bg-blue-900 text-white px-4 py-3 text-base font-semibold gap-2">
      <div class="text-lg">Descriptive Writing</div>
      <div class="flex flex-wrap justify-center gap-2">
        <button class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 active:bg-blue-800 transition">Letter</button>
        <button class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 active:bg-blue-800 transition">Essay</button>
        <button class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 active:bg-blue-800 transition">Report</button>
        <button class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 active:bg-blue-800 transition">Email</button>
        <button class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700 active:bg-blue-800 transition">Situation Analysis</button>
      </div>
    </nav>

    <!-- Info Panel -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3 px-4 py-4 text-center sm:text-left">
      <div id="timer" class="text-green-600 font-bold">Time left: 10:00</div>
      <div id="wordCount" class="text-gray-700 font-bold">Word count: 0</div>
      <button
        onclick="copyTextarea()"
        class="bg-zinc-800 text-white px-3 py-1 rounded text-sm hover:bg-zinc-700 transition"
      >
        ðŸ“‹ Copy
      </button>
    </div>

    <!-- Form Section -->
    <form
      id="descriptiveForm"
      method="POST"
      action="/submit-descriptive"
      class="mx-4 md:mx-auto max-w-2xl flex flex-col gap-4"
    >
      <textarea
        id="descriptiveBox"
        name="prompt"
        rows="12"
        required
        spellcheck="false"
        onpaste="return false;"
        oncopy="return false;"
        oncut="return false;"
        oncontextmenu="return false;"
        class="w-full border border-gray-300 p-3 text-base rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white"
      ></textarea>

      <div class="flex flex-col sm:flex-row justify-center sm:justify-start gap-4">
        <button
          type="submit"
          onclick="handleSubmit(event)"
          class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
        >
          Submit
        </button>
        <button
          type="button"
          onclick="window.open('https://chatgpt.com/', '_blank')"
          class="px-6 py-2 bg-gray-600 text-white rounded hover:bg-gray-700"
        >
          ChatGpt
        </button>
      </div>
    </form>
  </body>
</html>


